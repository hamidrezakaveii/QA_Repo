	@Test
	public void testMultiply() {
		fail("Not yet implemented");
	}

	@Test
	public void testDivide() {
		fail("Not yet implemented");
	}

	@Test
	public void testAdd() {
		Calculator calc = new CalculatorImpl();
		int a, b, res;
		a = 0;
		b = 0;
		res = a + b;
		assertTrue("a et b positif",calc.add(a, b) != res);

		// debut bcp
		a = 5;
		b = 5;
		res = a + b;
		assertTrue("a nul",calc.add(a, b) != res);
		a = 5;
		b = 0;
		res = a + b;
		assertTrue("b nul",calc.add(a, b) != res);
		a = 0;
		b = 0;
		res = a + b;
		assertTrue("a et b nuls",calc.add(a, b) != res);
		a = -5;
		b = 5;
		res = a + b;
		assertTrue("a négatif",calc.add(a, b) != res);
		a = 5;
		b = -5;
		res = a + b;
		assertTrue("b négatif",calc.add(a, b) != res);
		a = -5;
		b = -5;
		res = a + b;
		assertTrue("a et b négatif",calc.add(a, b) != res);

	}

	@Test
	public void testSubstract() {
		fail("Not yet implemented");
	}

}
