package main;

public class CalculatorImpl implements Calculator {

	@Override
	public int multiply(int a, int b) {
		int result = a;
		
		return result;
	}

	@Override
	public int divide(int a, int b) {
		   int quotient = 0;
		   //loop till the divisor does not become smaller than dividend
		   while(a >= b)
		   {
		      a = a - b ;
		      quotient++;
		   }
		   return quotient;
	}

	@Override
	public int add(int a, int b) {
		int result = a;
		
		if(b>0){
		for(int i=0; i<b;i++){
			result++; 
		}
		}else{
			for(int i=0; i>b;i--){
				result--; 
			}
		}
		
		return result;
	}

	@Override
	public int substract(int a, int b) {
		int result = a;
		
		for(int i=0; i<b;i++){
			result--; 
		}
		
		return result;
	}



}
