	@Test
	public void testAdd() {
		Calculator calc = new CalculatorImpl();
		int a,b,res;
		a=0;
		b=0;
		res=a+b;
		if(calc.add(a,b) != res){
			fail("a et b positif");
		}
		//debut bcp
		a = 5;
		b = 5;
		res= a + b;
		if (calc.add(a, b) != res) {
		fail("a nul");
		}
		a = 5;
		b = 0;
		res= a + b;
		if (calc.add(a, b) != res) {
		fail("b nul");
		}
		a = 0;
		b = 0;
		res= a + b;
		if (calc.add(a, b) != res) {
		fail("a et b nuls");
		}
		a = -5;
		b = 5;
		res= a + b;
		if (calc.add(a, b) != res) {
		fail("a négatif");
		}
		a = 5;
		b = -5;
		res= a + b;
		if (calc.add(a, b) != res) {
		fail("b négatif");
		}
		a = -5;
		b = -5;
		res= a + b;
		if (calc.add(a, b) != res) {
		fail("a et b négatif");
		}
		
	}

